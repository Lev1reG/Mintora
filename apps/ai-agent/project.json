{
  "name": "ai-agent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ai-agent",
  "projectType": "application",
  "tags": ["type:app", "lang:python"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run fastapi dev main.py",
        "cwd": "apps/ai-agent"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run fastapi run main.py",
        "cwd": "apps/ai-agent"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest",
        "cwd": "apps/ai-agent"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check .",
        "cwd": "apps/ai-agent"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff format .",
        "cwd": "apps/ai-agent"
      }
    }
  }
}
